@{
    ViewData["Title"] = "Resultados";
    Layout = "_Layout"; // Usa el layout compartido
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <link rel="stylesheet" href="~/css/resultados.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="shortcut icon" href="https://cdn-icons-png.flaticon.com/512/5067/5067875.png" />
    <style>
        #map {
            height: 300px;
            width: 100%;
            border-radius: 10px;
            margin-bottom: 50px;
        }

        .table-container {
            margin-top: 20px;
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body>
    <header class="mb-4 border border-dark">
        <nav class="navbar navbar-expand-lg sticky-top">
            <div class="container">
                <a asp-controller="Home" asp-action="Index">
                    <img style="width: 50px; height: 50px; border-radius: 50%;"
                         src="https://cdn-icons-png.flaticon.com/512/5067/5067875.png" alt="Logo">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto me-5">
                        <li class="nav-item p-2">
                            <a class="nav-link" asp-controller="Reportes" asp-action="Index">Reportar Robo</a>
                        </li>
                        <li class="nav-item p-2">
                            <a class="nav-link" asp-controller="Planes" asp-action="Index">Mejorar a Premium</a>
                        </li>
                        <li class="nav-item p-2">
                            <a class="nav-link" asp-controller="Mapa" asp-action="Index">Mapa de Navegación</a>
                        </li>
                        <li class="nav-item p-2 me-5">
                            <a class="nav-link" asp-controller="PQRS" asp-action="Index">PQRS</a>
                        </li>
                    </ul>
                    <a class="btn btn-light me-5" asp-controller="Login" asp-action="CerrarSesion">Cerrar Sesión</a>
                </div>
            </div>
        </nav>
    </header>

    <header class="bg-light py-3">
        <div class="container text-center">
            <h1 class="fw-bold">Resultados</h1>
            <p class="text-muted">Información de robos y zonas</p>
        </div>
    </header>

    <main class="container">
        <section class="table-container">
            <h2 class="h4 mb-3">Tabla de Robos</h2>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Localidad</th>
                        <th scope="col">Zona</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Apellido</th>
                        <th scope="col">Descripción</th>
                        <th scope="col">Fecha</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">1</th>
                        <td>Chapinero</td>
                        <td>Carrera 13</td>
                        <td>María</td>
                        <td>Gómez</td>
                        <td>Robo de vehículo estacionado</td>
                        <td>2024-11-02</td>
                    </tr>
                    <tr>
                        <th scope="row">2</th>
                        <td>Chapinero</td>
                        <td>Zona T</td>
                        <td>Pedro</td>
                        <td>Martínez</td>
                        <td>Hurto callejero</td>
                        <td>2024-11-05</td>
                    </tr>
                    <tr>
                        <th scope="row">3</th>
                        <td>Chapinero</td>
                        <td>Calle 72</td>
                        <td>Laura</td>
                        <td>Hernández</td>
                        <td>Robo de cartera en la vía pública</td>
                        <td>2024-11-06</td>
                    </tr>
                    <tr>
                        <th scope="row">4</th>
                        <td>Chapinero</td>
                        <td>Parque Virrey</td>
                        <td>Carlos</td>
                        <td>Rodríguez</td>
                        <td>Hurto de bicicleta</td>
                        <td>2024-11-07</td>
                    </tr>
                    <tr>
                        <th scope="row">5</th>
                        <td>Chapinero</td>
                        <td>Calle 85</td>
                        <td>Juan</td>
                        <td>Pérez</td>
                        <td>Hurto a mano armada en un comercio</td>
                        <td>2024-11-01</td>
                    </tr>
                    <tr>
                        <th scope="row">6</th>
                        <td>Suba</td>
                        <td>Centro Comercial Suba</td>
                        <td>María</td>
                        <td>Gómez</td>
                        <td>Robo de vehículo estacionado</td>
                        <td>2024-11-02</td>
                    </tr>
                    <tr>
                        <th scope="row">7</th>
                        <td>Teusaquillo</td>
                        <td>Parque Nacional</td>
                        <td>Pedro</td>
                        <td>Martínez</td>
                        <td>Hurto callejero</td>
                        <td>2024-11-03</td>
                    </tr>
                    <tr>
                        <th scope="row">8</th>
                        <td>Usaquén</td>
                        <td>Calle 116</td>
                        <td>Laura</td>
                        <td>Hernández</td>
                        <td>Robo de pertenencias personales</td>
                        <td>2024-11-04</td>
                    </tr>
                    <tr>
                        <th scope="row">9</th>
                        <td>Fontibón</td>
                        <td>Zona Franca</td>
                        <td>Carlos</td>
                        <td>Rodríguez</td>
                        <td>Hurto en transporte público</td>
                        <td>2024-11-05</td>
                    </tr>
                </tbody>
            </table>
        </section>

        <section class="mt-4">
            <h2 class="h4 mb-3">Mapa de Zona</h2>
            <div id="map"></div>
        </section>
        <div style="text-align: center;">
            <a asp-controller="Home" asp-action="Index" class="mb-4 btn btn-outline-dark">Volver</a>
        </div>
    </main>

    <footer class="border border-dark">
        <ul class="list">
            <li>
                <a asp-controller="Home" asp-action="AcercaDeNosotros">Acerca de nosotros</a>
            </li>
            <li>
                <a asp-controller="Home" asp-action="PrivacidadCondiciones">Privacidad y Condiciones</a>
            </li>
            <li>
                <a asp-controller="Home" asp-action="Error404">Error 404</a>
            </li>
            <li>
                <a asp-controller="Home" asp-action="Error500">Error 500</a>
            </li>
        </ul>
        <p class="copyright">
            © 2024 Aplicativo de Robos. SENA, Centro de Servicios Financieros
        </p>
    </footer>

    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script>
        // Inicializar el mapa centrado en Chapinero
        var map = L.map('map').setView([4.645365, -74.057036], 14); // Coordenadas de Chapinero, Bogotá

        // Agregar capa de OpenStreetMap
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            maxZoom: 19,
            attribution: '© OpenStreetMap'
        }).addTo(map);

        // Agregar marcador para Chapinero
        L.marker([4.645365, -74.057036])
            .addTo(map)
            .bindPopup('<b>Chapinero</b><br>Zona seleccionada.')
            .openPopup();
    </script>
</body>
</html>