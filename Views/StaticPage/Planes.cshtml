@{
    ViewData["Title"] = "Mejorar a Premium";
    Layout = "_Layout"; // Usa el layout compartido
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/planes.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="shortcut icon" href="https://cdn-icons-png.flaticon.com/512/5067/5067875.png" />
</head>
<body>
    <div class="contenedor-main">
        <header class="mb-4 border border-dark">
            <nav class="navbar navbar-expand-lg sticky-top">
                <div class="container">
                    <a asp-controller="Home" asp-action="Index">
                        <img style="width: 50px; height: 50px; border-radius: 50%;"
                             src="https://cdn-icons-png.flaticon.com/512/5067/5067875.png" alt="Logo">
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <!-- Menú comentado -->
                    </div>
                </div>
            </nav>
        </header>

        <main class="container mt-5">
            <div class="text-center">
                <h1 class="fw-bold">Mejora a Premium</h1>
                <p class="text-muted">Descubre todos los beneficios al adquirir nuestro plan Premium.</p>
            </div>

            <div class="row justify-content-center mt-5">
                <div class="col-lg-8">
                    <table class="table table-bordered text-center">
                        <thead class="table-dark">
                            <tr>
                                <th>Características</th>
                                <th>Plan Free</th>
                                <th>Plan Premium</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Reportes disponibles</td>
                                <td>3 por mes</td>
                                <td>Ilimitados</td>
                            </tr>
                            <tr>
                                <td>Búsquedas de estadísticas</td>
                                <td>3 por día</td>
                                <td>Ilimitadas</td>
                            </tr>
                            <tr>
                                <td>Estadísticas detalladas</td>
                                <td>No disponible</td>
                                <td>Disponible</td>
                            </tr>
                            <tr>
                                <td>Prioridad en soporte</td>
                                <td>No disponible</td>
                                <td>Alta</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="text-center mt-4">
                <p class="fw-bold fs-5">¡Adquiere Premium por solo <span class="text-danger">$10,000 COP</span> al mes!</p>
                <!-- Botón modificado -->
                <button class="btn btn-dark" onclick="alertarCompra(event)">Comprar Premium</button>
            </div>

            <div style="text-align: center; margin-top: 50px;">
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-dark">Volver</a>
            </div>
        </main>

        <footer class="bg-light py-3">
            <div class="container text-center">
                <p class="text-muted small mb-0">&copy; 2024 Aplicativo de Robos. Todos los derechos reservados.</p>
            </div>
        </footer>
    </div>

    <!-- Modal para la compra Premium -->
    <div class="modal fade" id="compraModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Información de Compra</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Comunícate al siguiente correo para ayudarte con tu gestión de plan premium: 
                    <div>
                        <strong>planes@gmail.com</strong> o al escribe al número <strong>7723637</strong>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-dark" data-bs-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function alertarCompra(event) {
            event.preventDefault(); // Previene la recarga de página
            const modal = new bootstrap.Modal(document.getElementById('compraModal'));
            modal.show();
        }
    </script>
</body>
</html>