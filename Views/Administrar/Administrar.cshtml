@{
    ViewData["Title"] = "Administrar";
    Layout = "_Layout"; // Usa el layout compartido
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/inicioPrincipal.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="shortcut icon" href="https://cdn-icons-png.flaticon.com/512/5067/5067875.png" />
</head>
<body>
    <header class="mb-4 border border-dark">
        <nav class="navbar navbar-expand-lg sticky-top">
            <div class="container">
                <a asp-controller="Home" asp-action="Index">
                    <img style="width: 50px; height: 50px; border-radius: 50%;" src="https://cdn-icons-png.flaticon.com/512/5067/5067875.png" alt="Logo">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto me-5">
                        <li class="nav-item p-2">
                            <a class="nav-link" asp-controller="Reportes" asp-action="Reportar">Reportar Robo</a>
                        </li>
                        <li class="nav-item p-2">
                            <a class="nav-link" asp-controller="Planes" asp-action="Index">Mejorar a Premium</a>
                        </li>
                        <li class="nav-item p-2">
                            <a class="nav-link" asp-controller="Mapa" asp-action="Index">Mapa de Navegación</a>
                        </li>
                        <li class="nav-item p-2 me-5">
                            <a class="nav-link" asp-controller="PQRS" asp-action="Index">PQRS</a>
                        </li>
                    </ul>
                    <a class="btn btn-light me-5" asp-controller="Login" asp-action="CerrarSesion">Cerrar Sesión</a>
                </div>
            </div>
        </nav>
    </header>

    <main class="container py-5">
        <h1 class="text-center mb-4">Administrar Usuarios</h1>

        <!-- Función: Editar Usuario -->
        <section class="mb-5">
            <h2 class="h4 mb-3">Editar Usuario</h2>
            <form class="row g-3" method="post" asp-action="EditarUsuario">
                <div class="col-md-6">
                    <label for="userIdEdit" class="form-label">ID del Usuario</label>
                    <input type="number" class="form-control" id="userIdEdit" name="userId" placeholder="Ingrese el ID del usuario" required>
                </div>
                <div class="col-md-6">
                    <label for="newEmail" class="form-label">Nuevo Correo Electrónico</label>
                    <input type="email" class="form-control" id="newEmail" name="newEmail" placeholder="Ingrese el nuevo correo" required>
                </div>
                <div class="col-12 text-end">
                    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                </div>
            </form>
        </section>

        <!-- Función: Deshabilitar Usuario -->
        <section class="mb-5">
            <h2 class="h4 mb-3">Deshabilitar Usuario</h2>
            <form class="row g-3" method="post" asp-action="DeshabilitarUsuario">
                <div class="col-md-6">
                    <label for="userIdDelete" class="form-label">ID del Usuario</label>
                    <input type="number" class="form-control" id="userIdDelete" name="userId" placeholder="Ingrese el ID del usuario" required>
                </div>
                <div class="col-md-6">
                    <label for="deleteReason" class="form-label">Motivo de Eliminación</label>
                    <textarea class="form-control" id="deleteReason" name="deleteReason" rows="2" placeholder="Ingrese el motivo" required></textarea>
                </div>
                <div class="col-12 text-end">
                    <button type="submit" class="btn btn-danger">Deshabilitar Usuario</button>
                </div>
            </form>
        </section>

        <!-- Función: Generar Informe -->
        <section class="mb-5">
            <h2 class="h4 mb-3">Generar Informe</h2>
            <form class="row g-3" method="post" asp-action="GenerarInforme" enctype="multipart/form-data">
                <div class="col-md-6">
                    <label for="reportType" class="form-label">Tipo de Informe</label>
                    <select class="form-select" id="reportType" name="reportType" required>
                        <option selected disabled value="">Seleccione un tipo</option>
                        <option value="usuarios">Usuarios Registrados</option>
                        <option value="actividades">Actividades Recientes</option>
                        <option value="robos">Estadísticas de Robos</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label for="reportFile" class="form-label">Subir Archivo</label>
                    <input type="file" class="form-control" id="reportFile" name="reportFile" required>
                    <div class="invalid-feedback">
                        Por favor selecciona un archivo para continuar.
                    </div>
                </div>
                <div class="col-12 text-end">
                    <button type="submit" class="btn btn-success">Generar Informe</button>
                </div>
            </form>
        </section>

        <!-- Función: Ver PQRS -->
        <section class="mb-5">
            <h2 class="h4 mb-3">Ver PQRS</h2>
            <form class="row g-3" method="post" asp-action="VerPQRS">
                <div class="col-md-6">
                    <label for="pqrsId" class="form-label">ID del PQRS</label>
                    <input type="number" class="form-control" id="pqrsId" name="pqrsId" placeholder="Ingrese el ID del PQRS" required>
                </div>
                <div class="col-6 text-start mt-5">
                    <button type="submit" class="btn btn-success">Buscar PQRS</button>
                </div>
            </form>
        </section>

        <!-- Función: Ver Reporte -->
        <section class="mb-5">
            <h2 class="h4 mb-3">Ver Reporte</h2>
            <form class="row g-3" method="post" asp-action="VerReporte">
                <div class="col-md-6">
                    <label for="reportId" class="form-label">ID del Reporte</label>
                    <input type="number" class="form-control" id="reportId" name="reportId" placeholder="Ingrese el ID del Reporte" required>
                </div>
                <div class="col-6 text-start mt-5">
                    <button type="submit" class="btn btn-success">Buscar Reporte</button>
                </div>
            </form>
        </section>
    </main>

    <footer class="border border-dark">
        <ul class="list">
            <li>
                <a asp-controller="Home" asp-action="AcercaDeNosotros">Acerca de nosotros</a>
            </li>
            <li>
                <a asp-controller="Home" asp-action="PrivacidadCondiciones">Privacidad y Condiciones</a>
            </li>
            <li>
                <a asp-controller="Home" asp-action="Error404">Error 404</a>
            </li>
            <li>
                <a asp-controller="Home" asp-action="Error500">Error 500</a>
            </li>
        </ul>
        <p class="copyright">
            © 2024 Aplicativo de Robos. SENA, Centro de Servicios Financieros
        </p>
    </footer>
</body>
</html>